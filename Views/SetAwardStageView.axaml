<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Pyrite.ViewModels"
             x:Class="Pyrite.Views.SetAwardStageView"
             x:DataType="vm:MainWindowViewModel">
    <Border Padding="16" CornerRadius="8" BorderBrush="#3AFFFFFF" BorderThickness="1">
        <Grid RowDefinitions="Auto,Auto" RowSpacing="10">
            <TextBlock Grid.Row="0" Text="Stage: set_award" FontSize="18" FontWeight="SemiBold" />
            <TextBlock Grid.Row="1" Text="Assign award results to selected teams before presentation launch."
                       TextWrapping="Wrap" />
        </Grid>
    </Border>
</UserControl>